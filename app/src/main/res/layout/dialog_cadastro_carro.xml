<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Adicionar Veículo"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editPlaca"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_backgroud"
        android:hint="Placa"
        android:paddingStart="16dp"
        android:textColor="#000000"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editMarca"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_backgroud"
        android:hint="Marca"
        android:paddingStart="16dp"
        android:textColor="#000000"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/editPlaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editModelo"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_backgroud"
        android:hint="Modelo"
        android:paddingStart="16dp"
        android:textColor="#000000"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/editMarca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NOVO CAMPO: Apelido (opcional) -->
    <EditText
        android:id="@+id/editApelido"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_backgroud"
        android:hint="Apelido (opcional)"
        android:paddingStart="16dp"
        android:textColor="#000000"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/editModelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/line_ano_km"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editApelido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editAno"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_backgroud"
            android:hint="Ano"
            android:inputType="number"
            android:maxLength="4"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA" />

        <EditText
            android:id="@+id/editKM"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_backgroud"
            android:hint="KM's"
            android:inputType="number"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tipo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Tipo de Veículo *"
        android:textColor="@color/verdeescuro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_ano_km" />

    <RadioGroup
        android:id="@+id/rg_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tipo_label">

        <RadioButton
            android:id="@+id/rb_carro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/poppins"
            android:text="Carro" />

        <RadioButton
            android:id="@+id/rb_moto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins"
            android:text="Moto" />
    </RadioGroup>

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/verdeescuro"
        android:fontFamily="@font/poppins_medium"
        android:minHeight="52dp"
        android:text="CONFIRMAR"
        android:textColor="@color/branco"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/rg_vehicle_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
