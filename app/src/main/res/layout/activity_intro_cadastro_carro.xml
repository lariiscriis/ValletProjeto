<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroCadastroCarro">

    <LinearLayout
        android:id="@+id/introLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:context=".IntroActivity"
        tools:ignore="ExtraText">

        <!-- Título de boas-vindas -->

        <!-- Imagem de carro -->

        <!-- Texto explicativo -->

        <!-- Botão de ir para o cadastro -->

        <Button
            android:id="@+id/btnSair"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="Logout" />

        <Button
            android:id="@+id/btnadmin"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="Logout" />
        <TextView
            android:id="@+id/txtBemVindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingBottom="16dp"
            android:text="Bem-vindo(a)"
            android:textColor="#121212"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingBottom="16dp"
            android:text="Usuário!"
            android:textColor="#00A676"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/gifCarro"
            android:layout_width="362dp"
            android:layout_height="403dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Gif de um carro" />

        <Button
            android:id="@+id/btnVaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="Logout" />

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:padding="12dp"
            android:text="Antes de estacionar, \n vamos conhecer seu carro."
            android:textColor="#555555"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnIrParaCadastro"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#046C4E"
            android:elevation="4dp"
            android:fontFamily="@font/poppins_medium"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="Começar Cadastro"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
