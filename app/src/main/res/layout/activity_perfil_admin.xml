<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    android:padding="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:clipToPadding="false"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerVertical"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <!-- FOTO -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="6dp"
                    app:strokeColor="#EEEEEE"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/imgFotoEstacionamento"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Foto do perfil"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_default_profile" />
                </com.google.android.material.card.MaterialCardView>

                <!-- INFORMAÇÕES Administrador -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações Administrador"
                    android:textSize="18sp"
                    android:textColor="@color/verdeescuro"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvNomeAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do admin"
                        android:textColor="#333"/>

                    <TextView
                        android:id="@+id/tvEmailAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#555"/>


                </LinearLayout>
                <!-- INFORMAÇÕES BÁSICAS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações Básicas"
                    android:textSize="18sp"
                    android:textColor="@color/verdeescuro"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvNomeEstacionamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome do Estacionamento: Estaciona Fácil"
                        android:textColor="#333"/>

                    <TextView
                        android:id="@+id/tvCnpj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CNPJ: 00.000.000/0000-00"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvTelefoneEstacionamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefone: (11) 99999-9999"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvCep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CEP: 12345-678"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Endereço: Rua das Flores, 123 - Centro - SP"
                        android:textColor="#555"/>
                </LinearLayout>

                <!-- VAGAS E ESTRUTURA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vagas e Estrutura"
                    android:textSize="18sp"
                    android:textColor="@color/verdeescuro"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvVagasTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vagas Totais: 40"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvVagasComum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vagas Comuns: 30"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvVagasPcd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vagas Idoso/PCD: 10"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvCobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Possui Cobertura: Sim"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvPavimentos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Número de Pavimentos: 2"
                        android:textColor="#555"/>
                </LinearLayout>

                <!-- HORÁRIOS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Horário de Funcionamento"
                    android:textSize="18sp"
                    android:textColor="@color/verdeescuro"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvHorarioAbertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Abertura: 07:00"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvHorarioFechamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fechamento: 22:00"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvTempoMaxReserva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tempo Máx. de Reserva: 2h"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvToleranciaReserva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tolerância: 10 min"
                        android:textColor="#555"/>
                </LinearLayout>

                <!-- VALORES -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valores"
                    android:textSize="18sp"
                    android:textColor="@color/verdeescuro"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvValorHora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor por Hora: R$ 10,00"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvValorDiaria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor Diário: R$ 40,00"
                        android:textColor="#555"/>
                </LinearLayout>

                <!-- LOCALIZAÇÃO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Localização"
                    android:textSize="18sp"
                    android:textColor="@color/verdeescuro"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLatitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latitude: -23.5505"
                        android:textColor="#555"/>

                    <TextView
                        android:id="@+id/tvLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Longitude: -46.6333"
                        android:textColor="#555"/>
                </LinearLayout>

                <!-- BOTÃO EDITAR -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditarEstacionamento"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="EDITAR ESTACIONAMENTO"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@android:color/white"
                    app:cornerRadius="30dp"
                    app:backgroundTint="@color/verdeescuro"/>
            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
