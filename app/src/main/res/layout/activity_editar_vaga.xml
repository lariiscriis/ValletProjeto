<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Número -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Número da vaga">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Localização -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Localização">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLocalizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Preço -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Preço por hora (R$)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPreco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Piso -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Piso">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPiso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo de veículo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de veículo"
            android:layout_marginBottom="4dp"/>

        <RadioGroup
            android:id="@+id/radioTipoVeiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioCarro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carro"/>

            <RadioButton
                android:id="@+id/radioMoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Moto"/>
        </RadioGroup>

        <!-- Preferencial -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchPreferencial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaga preferencial"
            android:layout_marginBottom="16dp"/>

        <!-- Disponibilidade -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDisponivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaga disponível"
            android:layout_marginBottom="24dp"/>

        <!-- Botão Salvar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="SALVAR ALTERAÇÕES"
            android:textSize="16sp"
            app:backgroundTint="@color/verdeescuro"
            app:iconGravity="start" />
    </LinearLayout>
</ScrollView>
