<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ValletProjeto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores principais usando sua paleta -->
        <item name="colorPrimary">@color/verdeescuro</item>
        <item name="colorPrimaryVariant">@color/verdeescuro</item>
        <item name="colorOnPrimary">@color/branco</item>
        <item name="colorSecondary">@color/verdeclaro</item>
        <item name="colorSecondaryVariant">@color/verdeescuro</item>
        <item name="colorOnSecondary">@color/branco</item>

        <!-- Barra do celular em verde escuro -->
        <item name="android:statusBarColor">@color/verdeclaro</item>

        <!-- Cor de fundo usando branco da paleta -->
        <item name="android:windowBackground">@color/branco</item>

        <!-- Cores de destaque e clique -->
        <item name="colorControlActivated">@color/verdeclaro</item>
        <item name="colorControlHighlight">@color/verdeclaro</item>

        <!-- Para Material 3 -->
        <item name="android:colorBackground">@color/branco</item>
        <item name="android:navigationBarColor">@color/branco</item>
    </style>

    <style name="Theme.ValletProjeto" parent="Base.Theme.ValletProjeto" />

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/form_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <item name="android:statusBarColor">@color/verdeescuro</item>

        <!-- Cores de destaque e clique -->
        <item name="colorControlActivated">@color/verdeclaro</item>
        <item name="colorControlHighlight">@color/verdeclaro</item>

        <!-- Cores do dialog -->
        <item name="colorPrimary">@color/verdeescuro</item>
        <item name="colorSecondary">@color/verdeclaro</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Remove o windowBackground que não é necessário aqui -->
        <item name="boxStrokeColor">@color/verdeescuro</item>
        <item name="hintTextColor">@color/cinza</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="startIconTint">@color/verdeescuro</item>

        <!-- Cores para estados usando selector -->
    </style>

</resources>
